{% extends 'base.html.twig' %}

{% block title %}Détails du paiement{% endblock %}

{% block body %}
<div class="page-header">
    <div style="display: flex; justify-content: space-between; align-items: center;">
        <div>
            <h1 class="page-title">Détails du paiement</h1>
            <p class="page-description">Informations complètes du paiement</p>
        </div>
        <div style="display: flex; gap: 0.75rem;">
            {% if not paiement.isAnnule and not paiement.location.isAnnulee %}
                <a href="{{ path('app_paiement_edit', {id: paiement.id}) }}" class="btn-secondary-modern">
                    <i class="bi bi-pencil"></i> Modifier
                </a>
                <a href="{{ path('app_paiement_annuler', {id: paiement.id}) }}" class="btn-danger-modern">
                    <i class="bi bi-x-circle"></i> Annuler
                </a>
            {% endif %}
            {% if paiement.location %}
                <a href="{{ path('app_location_show', {id: paiement.location.id}) }}" class="btn-secondary-modern">
                    <i class="bi bi-arrow-left"></i> Retour à la location
                </a>
            {% else %}
                <a href="{{ path('app_paiement_index') }}" class="btn-secondary-modern">
                    <i class="bi bi-arrow-left"></i> Retour
                </a>
            {% endif %}
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="section-card">
            <div class="section-header">
                <h3 class="section-title"><i class="bi bi-cash-coin"></i> Informations du paiement</h3>
            </div>
            {% if paiement.isAnnule %}
                <div class="alert alert-warning mb-3">
                    <i class="bi bi-exclamation-triangle"></i> <strong>Ce paiement a été annulé</strong>
                    {% if paiement.dateAnnulation %}
                        <br><small>Annulé le {{ paiement.dateAnnulation|date('d/m/Y à H:i') }}</small>
                    {% endif %}
                    {% if paiement.raisonAnnulation %}
                        <br><small>Raison: {{ paiement.raisonAnnulation }}</small>
                    {% endif %}
                </div>
            {% endif %}
            <table class="modern-table" style="margin: 0;">
                <tbody>
                    <tr>
                        <th width="200" style="font-weight: 600; color: var(--text-gray);">Statut</th>
                        <td>
                            {% if paiement.isAnnule %}
                                <span class="table-badge danger">Annulé</span>
                            {% else %}
                                <span class="table-badge success">Valide</span>
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th width="200" style="font-weight: 600; color: var(--text-gray);">Location</th>
                        <td>
                            <strong>{{ paiement.location.face.nomComplet }}</strong>
                            <br>
                            <small style="color: var(--text-gray); font-size: 0.75rem;">{{ paiement.location.client.nom }}</small>
                            <br>
                            <a href="{{ path('app_location_show', {id: paiement.location.id}) }}" class="btn-secondary-modern" style="margin-top: 0.5rem; padding: 0.375rem 0.75rem;">
                                <i class="bi bi-eye"></i> Voir la location
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <th>Montant</th>
                        <td><strong style="color: var(--primary-color); font-size: 1.5rem;">{{ paiement.montant|number_format(0, ',', ' ') }} FCFA</strong></td>
                    </tr>
                    <tr>
                        <th>Date de paiement</th>
                        <td>{{ paiement.datePaiement|date('d/m/Y') }}</td>
                    </tr>
                    <tr>
                        <th>Type</th>
                        <td><span class="table-badge {% if paiement.isAnnule %}danger{% else %}info{% endif %}" style="font-size: 0.875rem;">{{ paiement.typeLibelle }}</span></td>
                    </tr>
                    {% if paiement.notes %}
                    <tr>
                        <th>Notes</th>
                        <td>{{ paiement.notes }}</td>
                    </tr>
                    {% endif %}
                    {% if paiement.isAnnule and paiement.raisonAnnulation %}
                    <tr>
                        <th>Raison d'annulation</th>
                        <td>{{ paiement.raisonAnnulation }}</td>
                    </tr>
                    {% endif %}
                    <tr>
                        <th>Date de création</th>
                        <td>{{ paiement.createdAt|date('d/m/Y à H:i') }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
