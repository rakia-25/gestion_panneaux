{% extends 'base.html.twig' %}

{% block title %}Annuler le paiement #{{ paiement.id }}{% endblock %}

{% block breadcrumbs %}
    <nav aria-label="breadcrumb" class="breadcrumb-nav mb-3">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}">Tableau de bord</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_paiement_index') }}">Paiements</a></li>
            {% if paiement.location %}
                <li class="breadcrumb-item"><a href="{{ path('app_location_show', { id: paiement.location.id }) }}">LOC-{{ "%03d"|format(paiement.location.id) }}</a></li>
            {% endif %}
            <li class="breadcrumb-item"><a href="{{ path('app_paiement_show', { id: paiement.id }) }}">Paiement #{{ paiement.id }}</a></li>
            <li class="breadcrumb-item active" aria-current="page">Annuler</li>
        </ol>
    </nav>
{% endblock %}

{% block body %}
<div class="page-header d-flex flex-wrap justify-content-between align-items-start gap-2">
    <div>
        <h1 class="page-title">Annuler le paiement #{{ paiement.id }}</h1>
        <p class="page-description">{{ paiement.location.face.nomComplet }} — {{ paiement.location.client.nom }}</p>
    </div>
    {% if location_id %}
        <a href="{{ path('app_location_show', {id: location_id}) }}" class="btn-secondary-modern">
            <i class="bi bi-arrow-left"></i> Retour
        </a>
    {% else %}
        <a href="{{ path('app_paiement_show', {id: paiement.id}) }}" class="btn-secondary-modern">
            <i class="bi bi-arrow-left"></i> Retour
        </a>
    {% endif %}
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="section-card">
            <div class="section-header">
                <h3 class="section-title mb-0"><i class="bi bi-x-circle"></i> Confirmation d'annulation</h3>
            </div>
            <div class="form-card-inner">
                <div class="alert alert-warning mb-3">
                    <i class="bi bi-exclamation-triangle"></i> <strong>Attention :</strong>
                    L'annulation de ce paiement entraînera :
                    <ul style="margin-top: 0.5rem; margin-bottom: 0;">
                        <li>Le recalcul automatique du montant restant de la location</li>
                        <li>La mise à jour du statut de paiement de la location</li>
                        <li>La conservation de l'historique (le paiement ne sera pas supprimé)</li>
                    </ul>
                </div>

                <div class="alert alert-info mb-3">
                    <strong>Informations du paiement :</strong><br>
                    <small>
                        Date: {{ paiement.datePaiement|date('d/m/Y') }}<br>
                        Montant: <strong>{{ paiement.montant|number_format(0, ',', ' ') }} FCFA</strong><br>
                        Type: {{ paiement.typeLibelle }}<br>
                        Location: {{ paiement.location.face.nomComplet }} - {{ paiement.location.client.nom }}
                    </small>
                </div>

                <form method="post" action="{{ path('app_paiement_annuler', {id: paiement.id}) }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('annuler' ~ paiement.id) }}">

                    <div class="mb-3">
                        <label for="raison" class="form-label">Raison de l'annulation <span class="text-danger">*</span></label>
                        <textarea class="form-control" id="raison" name="raison" rows="4" required placeholder="Ex: Erreur de saisie, paiement erroné, remboursement, etc."></textarea>
                        <div class="form-text">Veuillez indiquer la raison de l'annulation de ce paiement.</div>
                    </div>

                    <div class="d-flex flex-wrap justify-content-between gap-2 mt-3">
                        {% if location_id %}
                            <a href="{{ path('app_location_show', {id: location_id}) }}" class="btn-secondary-modern">
                                <i class="bi bi-arrow-left"></i> Retour à la location
                            </a>
                        {% else %}
                            <a href="{{ path('app_paiement_index') }}" class="btn-secondary-modern">
                                <i class="bi bi-arrow-left"></i> Retour
                            </a>
                        {% endif %}
                        <button type="submit" class="btn-danger-modern">
                            <i class="bi bi-x-circle"></i> Confirmer l'annulation
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
