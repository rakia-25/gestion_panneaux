{% extends 'base.html.twig' %}

{% block title %}Modifier paiement{% endblock %}

{% block body %}
<div class="page-header">
    <h1 class="page-title">Modifier paiement</h1>
    <p class="page-description">Modifiez les informations du paiement</p>
</div>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="section-card">
            <div class="section-header">
                <h3 class="section-title"><i class="bi bi-pencil"></i> Informations du paiement</h3>
            </div>
            <div>
                {{ form_start(form) }}
                    {{ form_row(form.location) }}
                    {{ form_row(form.montant) }}
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.datePaiement) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.type) }}
                        </div>
                    </div>
                    {{ form_row(form.notes) }}

                    <div style="display: flex; justify-content: space-between; margin-top: 2rem;">
                        {% if paiement.location %}
                            <a href="{{ path('app_location_show', {id: paiement.location.id}) }}" class="btn-secondary-modern">
                                <i class="bi bi-arrow-left"></i> Retour Ã  la location
                            </a>
                        {% else %}
                            <a href="{{ path('app_paiement_index') }}" class="btn-secondary-modern">
                                <i class="bi bi-arrow-left"></i> Retour
                            </a>
                        {% endif %}
                        <button type="submit" class="btn-primary-modern">
                            <i class="bi bi-check"></i> Enregistrer
                        </button>
                    </div>
                    {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
