{% extends 'base.html.twig' %}

{% block title %}Modifier paiement #{{ paiement.id }}{% endblock %}

{% block breadcrumbs %}
    <nav aria-label="breadcrumb" class="breadcrumb-nav mb-3">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}">Tableau de bord</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_paiement_index') }}">Paiements</a></li>
            {% if paiement.location %}
                <li class="breadcrumb-item"><a href="{{ path('app_location_show', { id: paiement.location.id }) }}">LOC-{{ "%03d"|format(paiement.location.id) }}</a></li>
            {% endif %}
            <li class="breadcrumb-item active" aria-current="page">Modifier paiement</li>
        </ol>
    </nav>
{% endblock %}

{% block body %}
<div class="page-header d-flex flex-wrap justify-content-between align-items-start gap-2">
    <div>
        <h1 class="page-title">Modifier paiement</h1>
        <p class="page-description">Modifiez les informations du paiement</p>
    </div>
    <a href="{{ path('app_paiement_show', { id: paiement.id }) }}" class="btn-secondary-modern">
        <i class="bi bi-arrow-left"></i> Retour au paiement
    </a>
</div>

<div class="row g-3 g-lg-4">
    <div class="col-lg-8">
        <div class="section-card payment-form-card">
            <div class="form-card-inner">
                {% set cancel_path = path('app_paiement_show', { id: paiement.id }) %}
                {% include 'paiement/_form.html.twig' with {
                    form: form,
                    cancel_path: cancel_path,
                    submit_label: 'Enregistrer',
                    cancel_label: 'Annuler',
                    form_aria_label: 'Formulaire modification paiement'
                } %}
            </div>
        </div>
    </div>
    {% include 'paiement/_sidebar.html.twig' %}
</div>
{% endblock %}
