<div class="notification-dropdown-header d-flex justify-content-between align-items-center px-3 py-2 border-bottom">
    <span class="fw-semibold">Notifications</span>
    {% if unread_count > 0 %}
        <form action="{{ path('app_notification_mark_all_read') }}" method="post" class="d-inline">
            <input type="hidden" name="_token" value="{{ csrf_token('mark_all_read') }}">
            <button type="submit" class="btn btn-sm btn-link text-decoration-none p-0 border-0">Tout marquer lu</button>
        </form>
    {% endif %}
</div>
<div class="notification-dropdown-list" style="max-height: 320px; overflow-y: auto;">
    {% if notifications|length > 0 %}
        {% for notif in notifications %}
            <a href="{{ path('app_notification_voir', { id: notif.id }) }}" class="notification-item d-block text-decoration-none text-dark border-bottom px-3 py-2 {{ notif.lu ? '' : 'bg-light' }}">
                <div class="d-flex align-items-start gap-2">
                    <span class="flex-shrink-0 mt-1">
                        {% if notif.type == 'paiement_recu' %}
                            <i class="bi bi-cash-coin text-success"></i>
                        {% elseif notif.type == 'fin_location' %}
                            <i class="bi bi-calendar-event text-warning"></i>
                        {% elseif notif.type == 'impaye' %}
                            <i class="bi bi-exclamation-triangle text-danger"></i>
                        {% else %}
                            <i class="bi bi-bell text-primary"></i>
                        {% endif %}
                    </span>
                    <div class="min-w-0 flex-grow-1">
                        <div class="fw-medium small">{{ notif.titre }}</div>
                        <div class="text-muted small text-truncate">{{ notif.message }}</div>
                        <div class="text-muted" style="font-size: 0.7rem;">{{ notif.createdAt|date('d/m/Y H:i') }}</div>
                    </div>
                </div>
            </a>
        {% endfor %}
        <div class="px-3 py-2 text-center border-top">
            <a href="{{ path('app_notification_index') }}" class="small text-primary text-decoration-none">Voir toutes les notifications</a>
        </div>
    {% else %}
        <div class="px-3 py-4 text-center text-muted small">Aucune notification</div>
    {% endif %}
</div>
