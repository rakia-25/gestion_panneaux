{% extends 'base.html.twig' %}

{% block title %}Nouvelle location{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h3><i class="bi bi-plus-circle"></i> Nouvelle location</h3>
                </div>
                <div class="card-body">
                    {% if face_obj %}
                        <div class="alert alert-info mb-3">
                            <i class="bi bi-info-circle"></i> <strong>Face pré-sélectionnée :</strong> {{ face_obj.nomComplet }}
                            ({{ face_obj.panneau.emplacement }})
                        </div>
                    {% endif %}
                    {% if client_obj %}
                        <div class="alert alert-info mb-3">
                            <i class="bi bi-info-circle"></i> <strong>Client pré-sélectionné :</strong> {{ client_obj.nom }}
                        </div>
                    {% endif %}

                    {{ form_start(form) }}
                        {{ form_row(form.face) }}
                        {{ form_row(form.client) }}
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.dateDebut) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.dateFin) }}
                            </div>
                        </div>
                        {{ form_row(form.montantMensuel) }}
                        {{ form_row(form.estPaye) }}
                        {{ form_row(form.notes) }}

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> Le montant mensuel est pré-rempli automatiquement depuis le prix du panneau. Vous pouvez le modifier pour appliquer une remise ou un tarif spécial.
                            <br>
                            <i class="bi bi-info-circle"></i> Le système vérifiera automatiquement que la face est disponible pour la période sélectionnée.
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            {% if face_id and face_obj %}
                                <a href="{{ path('app_panneau_show', {id: face_obj.panneau.id}) }}" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left"></i> Retour au panneau
                                </a>
                            {% elseif client_id and client_obj %}
                                <a href="{{ path('app_client_show', {id: client_obj.id}) }}" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left"></i> Retour au client
                                </a>
                            {% else %}
                                <a href="{{ path('app_location_index') }}" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left"></i> Retour
                                </a>
                            {% endif %}
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check"></i> Créer
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const faceSelect = document.getElementById('location_face');
    const montantInput = document.getElementById('location_montantMensuel');

    if (faceSelect && montantInput) {
        // Stocker les prix des panneaux dans un objet
        // Les prix sont dans le texte des options au format "PAN-001-A - Emplacement (Disponible)"
        // On va extraire le prix depuis les attributs data ou utiliser une approche différente

        // Créer un objet pour stocker les prix par face_id
        const prixParFace = {};

        // Récupérer les prix depuis les options (si disponibles dans data attributes)
        // Sinon, on utilisera une requête AJAX simple

        // Écouter les changements de sélection de face
        faceSelect.addEventListener('change', function() {
            const selectedOption = this.options[this.selectedIndex];
            if (selectedOption && selectedOption.value && !montantInput.dataset.manualEdit) {
                // Récupérer le prix via une requête AJAX
                fetch(`/location/get-prix-face/${selectedOption.value}`)
                    .then(response => response.json())
                    .then(data => {
                        if (data.prix) {
                            montantInput.value = data.prix;
                            montantInput.dataset.autoFilled = 'true';
                        }
                    })
                    .catch(error => {
                        console.error('Erreur lors de la récupération du prix:', error);
                    });
            }
        });

        // Marquer comme modifié manuellement si l'utilisateur tape dedans
        montantInput.addEventListener('input', function() {
            this.dataset.manualEdit = 'true';
        });
    }
});
</script>
{% endblock %}
