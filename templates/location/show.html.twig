{% extends 'base.html.twig' %}

{% block title %}Location #{{ location.id }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-calendar-check"></i> Location #{{ location.id }}</h1>
        <div>
            <a href="{{ path('app_location_edit', {id: location.id}) }}" class="btn btn-secondary">
                <i class="bi bi-pencil"></i> Modifier
            </a>
            <a href="{{ path('app_location_index') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Retour
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Informations de la location</h5>
                </div>
                <div class="card-body">
                    <table class="table">
                        <tr>
                            <th width="200">Face</th>
                            <td>
                                <strong>{{ location.face.nomComplet }}</strong><br>
                                <small class="text-muted">{{ location.face.panneau.emplacement }}</small>
                            </td>
                        </tr>
                        <tr>
                            <th>Client</th>
                            <td>
                                <strong>{{ location.client.nom }}</strong><br>
                                {% if location.client.email %}
                                    <small class="text-muted">{{ location.client.email }}</small>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Période</th>
                            <td>
                                <strong>{{ location.dateDebut|date('d/m/Y') }}</strong> - 
                                <strong>{{ location.dateFin|date('d/m/Y') }}</strong><br>
                                <small class="text-muted">{{ location.nombreMois }} mois</small>
                            </td>
                        </tr>
                        <tr>
                            <th>Montant mensuel</th>
                            <td><strong>{{ location.montantMensuel|number_format(0, ',', ' ') }} FCFA</strong></td>
                        </tr>
                        <tr>
                            <th>Montant total</th>
                            <td><strong class="text-primary fs-5">{{ location.montantTotal|number_format(0, ',', ' ') }} FCFA</strong></td>
                        </tr>
                        <tr>
                            <th>Statut de paiement</th>
                            <td>
                                {% if location.estPaye %}
                                    <span class="badge bg-success fs-6">Payé</span>
                                {% else %}
                                    <span class="badge bg-danger fs-6">Impayé</span>
                                {% endif %}
                                <form method="post" action="{{ path('app_location_toggle_payment', {id: location.id}) }}" class="d-inline ms-2">
                                    <input type="hidden" name="_token" value="{{ csrf_token('toggle_payment' ~ location.id) }}">
                                    <button type="submit" class="btn btn-sm btn-outline-{{ location.estPaye ? 'danger' : 'success' }}">
                                        <i class="bi bi-{{ location.estPaye ? 'x' : 'check' }}-circle"></i> 
                                        Marquer comme {{ location.estPaye ? 'impayé' : 'payé' }}
                                    </button>
                                </form>
                            </td>
                        </tr>
                        <tr>
                            <th>Statut</th>
                            <td>
                                {% if location.isActive() %}
                                    <span class="badge bg-success">En cours</span>
                                {% elseif location.isTerminee() %}
                                    <span class="badge bg-secondary">Terminée</span>
                                {% else %}
                                    <span class="badge bg-info">À venir</span>
                                {% endif %}
                            </td>
                        </tr>
                        {% if location.notes %}
                        <tr>
                            <th>Notes</th>
                            <td>{{ location.notes }}</td>
                        </tr>
                        {% endif %}
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Informations du panneau</h5>
                </div>
                <div class="card-body">
                    <p><strong>Référence:</strong> {{ location.face.panneau.reference }}</p>
                    <p><strong>Type:</strong> 
                        {% if location.face.panneau.type == 'double' %}
                            <span class="badge bg-info">Double</span>
                        {% else %}
                            <span class="badge bg-secondary">Simple</span>
                        {% endif %}
                    </p>
                    <p><strong>Taille:</strong> {{ location.face.panneau.taille }}</p>
                    <p><strong>Prix mensuel:</strong> {{ location.face.panneau.prixMensuel|number_format(0, ',', ' ') }} FCFA</p>
                    <a href="{{ path('app_panneau_show', {id: location.face.panneau.id}) }}" class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-eye"></i> Voir le panneau
                    </a>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="mb-0">Informations du client</h5>
                </div>
                <div class="card-body">
                    <p><strong>Nom:</strong> {{ location.client.nom }}</p>
                    {% if location.client.telephone %}
                        <p><strong>Téléphone:</strong> {{ location.client.telephone }}</p>
                    {% endif %}
                    {% if location.client.email %}
                        <p><strong>Email:</strong> {{ location.client.email }}</p>
                    {% endif %}
                    <a href="{{ path('app_client_show', {id: location.client.id}) }}" class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-eye"></i> Voir le client
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
