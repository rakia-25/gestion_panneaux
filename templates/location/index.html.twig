{% extends 'base.html.twig' %}

{% block title %}Liste des locations{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-calendar-check"></i> Gestion des locations</h1>
        <a href="{{ path('app_location_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nouvelle location
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            {% if locations|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Face</th>
                                <th>Client</th>
                                <th>Date début</th>
                                <th>Date fin</th>
                                <th>Montant mensuel</th>
                                <th>Montant total</th>
                                <th>Statut</th>
                                <th>Paiement</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for location in locations %}
                                <tr class="{% if location.isActive() %}table-success{% elseif location.isTerminee() %}table-secondary{% endif %}">
                                    <td><strong>{{ location.face.nomComplet }}</strong></td>
                                    <td>{{ location.client.nom }}</td>
                                    <td>{{ location.dateDebut|date('d/m/Y') }}</td>
                                    <td>{{ location.dateFin|date('d/m/Y') }}</td>
                                    <td>{{ location.montantMensuel|number_format(0, ',', ' ') }} FCFA</td>
                                    <td><strong>{{ location.montantTotal|number_format(0, ',', ' ') }} FCFA</strong></td>
                                    <td>
                                        {% if location.isActive() %}
                                            <span class="badge bg-success">En cours</span>
                                        {% elseif location.isTerminee() %}
                                            <span class="badge bg-secondary">Terminée</span>
                                        {% else %}
                                            <span class="badge bg-info">À venir</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if location.estPaye %}
                                            <span class="badge bg-success">Payé</span>
                                        {% else %}
                                            <span class="badge bg-danger">Impayé</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <a href="{{ path('app_location_show', {id: location.id}) }}" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="{{ path('app_location_edit', {id: location.id}) }}" class="btn btn-sm btn-outline-secondary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form method="post" action="{{ path('app_location_delete', {id: location.id}) }}" class="d-inline" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette location ?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ location.id) }}">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Aucune location enregistrée. <a href="{{ path('app_location_new') }}">Créer la première location</a>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
