{% extends 'base.html.twig' %}

{% block title %}Liste des panneaux{% endblock %}

{% block body %}
<div class="page-header">
    <h1 class="page-title">Gestion des Panneaux</h1>
    <p class="page-description">Gérez vos panneaux publicitaires, leurs faces et leurs disponibilités</p>
</div>

{# Boutons d'action #}
<div style="display: flex; gap: 1rem; margin-bottom: 2rem;">
    <a href="{{ path('app_panneau_new') }}" class="btn-primary-modern">
        <i class="bi bi-plus"></i> Nouveau Panneau
    </a>
</div>

<!-- Filtres -->
<div class="section-card" style="margin-bottom: 1.5rem;">
    <div class="section-header">
        <h3 class="section-title"><i class="bi bi-funnel"></i> Filtres</h3>
    </div>
    <div>
            <form method="GET" action="{{ path('app_panneau_index') }}" class="row g-3" onsubmit="return false;">
                <div class="col-md-3">
                    <label for="recherche" class="form-label">Recherche</label>
                    <input type="text" class="form-control" id="recherche" name="recherche"
                           value="{{ filters.recherche ?? '' }}"
                           placeholder="Référence, emplacement, quartier...">
                </div>
                <div class="col-md-2">
                    <label for="type" class="form-label">Type</label>
                    <select class="form-select" id="type" name="type">
                        <option value="">Tous</option>
                        <option value="simple" {{ filters.type == 'simple' ? 'selected' : '' }}>Simple</option>
                        <option value="double" {{ filters.type == 'double' ? 'selected' : '' }}>Double</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label for="etat" class="form-label">État</label>
                    <select class="form-select" id="etat" name="etat">
                        <option value="">Tous</option>
                        <option value="excellent" {{ filters.etat == 'excellent' ? 'selected' : '' }}>Excellent</option>
                        <option value="bon" {{ filters.etat == 'bon' ? 'selected' : '' }}>Bon</option>
                        <option value="moyen" {{ filters.etat == 'moyen' ? 'selected' : '' }}>Moyen</option>
                        <option value="mauvais" {{ filters.etat == 'mauvais' ? 'selected' : '' }}>Mauvais</option>
                        <option value="hors_service" {{ filters.etat == 'hors_service' ? 'selected' : '' }}>Hors service</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label for="eclairage" class="form-label">Éclairage</label>
                    <select class="form-select" id="eclairage" name="eclairage">
                        <option value="">Tous</option>
                        <option value="1" {{ filters.eclairage == '1' ? 'selected' : '' }}>Avec éclairage</option>
                        <option value="0" {{ filters.eclairage == '0' ? 'selected' : '' }}>Sans éclairage</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label for="statut_actif" class="form-label">Statut</label>
                    <select class="form-select" id="statut_actif" name="statut_actif">
                        <option value="">Tous (actifs + archivés)</option>
                        <option value="1" {{ filters.statut_actif == '1' ? 'selected' : '' }}>Actifs uniquement</option>
                        <option value="0" {{ filters.statut_actif == '0' ? 'selected' : '' }}>Archivés uniquement</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end gap-2">
                    <a href="{{ path('app_panneau_index') }}" class="btn-secondary-modern">
                        <i class="bi bi-x-circle"></i> Réinitialiser
                    </a>
                </div>
            </form>
    </div>
</div>

<div class="table-card">
            <div class="table-header">
                <h3 class="table-title">Panneaux</h3>
            </div>
    {% if panneaux|length > 0 %}
        <table class="modern-table">
            <thead>
                <tr>
                    <th>Référence</th>
                    <th>Emplacement</th>
                    <th>Taille</th>
                    <th>Type</th>
                    <th>Prix mensuel</th>
                    <th>Faces</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for panneau in panneaux %}
                    <tr {% if not panneau.actif %}style="opacity: 0.6;"{% endif %}
                        data-type="{{ panneau.type }}"
                        data-etat="{{ panneau.etat }}"
                        data-eclairage="{{ panneau.eclairage ? '1' : '0' }}"
                        data-actif="{{ panneau.actif ? '1' : '0' }}"
                        data-reference="{{ panneau.reference|lower }}"
                        data-emplacement="{{ panneau.emplacement|lower }}"
                        data-quartier="{{ (panneau.quartier ?? '')|lower }}"
                        data-visibilite="{{ (panneau.visibilite ?? '')|lower }}">
                        <td>
                            <strong>{{ panneau.reference }}</strong>
                            {% if not panneau.actif %}
                                <br><small class="text-danger">(Archivé)</small>
                            {% endif %}
                        </td>
                        <td>{{ panneau.emplacement }}</td>
                        <td>{{ panneau.getTailleFormatee() }}</td>
                        <td>
                            {% if panneau.type == 'double' %}
                                <span class="table-badge info">Double</span>
                            {% else %}
                                <span class="table-badge warning">Simple</span>
                            {% endif %}
                        </td>
                        <td>{{ panneau.prixMensuel|number_format(0, ',', ' ') }} FCFA</td>
                        <td>
                            {% for face in panneau.faces %}
                                {% set locationActive = face.getLocationActive() %}
                                {% set locationsFutures = face.getLocationsActivesOuFutures() %}
                                {% if locationActive %}
                                    <span class="table-badge warning" title="Occupée jusqu'au {{ locationActive.dateFin|date('d/m/Y') }}">
                                        {{ face.lettre }} (Occupée)
                                    </span>
                                {% elseif locationsFutures|length > 0 %}
                                    <span class="table-badge info" title="Réservée du {{ locationsFutures[0].dateDebut|date('d/m/Y') }} au {{ locationsFutures[0].dateFin|date('d/m/Y') }}">
                                        {{ face.lettre }} (Réservée)
                                    </span>
                                {% else %}
                                    <span class="table-badge success">
                                        {{ face.lettre }} (Disponible)
                                    </span>
                                {% endif %}
                            {% endfor %}
                        </td>
                        <td>
                            <div class="action-menu">
                                <a href="{{ path('app_panneau_show', {id: panneau.id}) }}" class="action-btn" title="Voir">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="{{ path('app_panneau_edit', {id: panneau.id}) }}" class="action-btn" title="Modifier">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                {% if panneau.actif %}
                                    <form method="post" action="{{ path('app_panneau_delete', {id: panneau.id}) }}" class="d-inline" onsubmit="return confirm('Êtes-vous sûr de vouloir archiver ce panneau ? Il ne sera plus disponible à la location.');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ panneau.id) }}">
                                        <button type="submit" class="action-btn" title="Archiver" style="color: var(--danger-color);">
                                            <i class="bi bi-archive"></i>
                                        </button>
                                    </form>
                                {% else %}
                                    <form method="post" action="{{ path('app_panneau_restore', {id: panneau.id}) }}" class="d-inline" onsubmit="return confirm('Réactiver ce panneau ? Il sera de nouveau disponible à la location.');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('restore' ~ panneau.id) }}">
                                        <button type="submit" class="action-btn" title="Réactiver" style="color: var(--success-color);">
                                            <i class="bi bi-arrow-counterclockwise"></i>
                                        </button>
                                    </form>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div style="text-align: center; padding: 2rem; color: var(--text-gray);">
            <i class="bi bi-info-circle"></i> Aucun panneau enregistré. <a href="{{ path('app_panneau_new') }}">Créer le premier panneau</a>
        </div>
    {% endif %}
</div>
{% endblock %}

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const rechercheInput = document.getElementById('recherche');
    const typeSelect = document.getElementById('type');
    const etatSelect = document.getElementById('etat');
    const eclairageSelect = document.getElementById('eclairage');
    const statutActifSelect = document.getElementById('statut_actif');
    const tableRows = document.querySelectorAll('tbody tr');

    let searchTimeout;

    // Fonction pour filtrer les lignes sans recharger la page
    function filterRows() {
        const recherche = (rechercheInput?.value || '').toLowerCase();
        const type = typeSelect?.value || '';
        const etat = etatSelect?.value || '';
        const eclairage = eclairageSelect?.value || '';
        const statutActif = statutActifSelect?.value || '';

        let visibleCount = 0;

        tableRows.forEach(row => {
            const rowType = row.dataset.type || '';
            const rowEtat = row.dataset.etat || '';
            const rowEclairage = row.dataset.eclairage || '';
            const rowActif = row.dataset.actif || '';
            const rowReference = row.dataset.reference || '';
            const rowEmplacement = row.dataset.emplacement || '';
            const rowQuartier = row.dataset.quartier || '';
            const rowVisibilite = row.dataset.visibilite || '';

            // Vérifier les filtres
            const typeMatch = !type || rowType === type;
            const etatMatch = !etat || rowEtat === etat;
            const eclairageMatch = !eclairage || rowEclairage === eclairage;
            const statutActifMatch = !statutActif || rowActif === statutActif;
            const rechercheMatch = !recherche ||
                rowReference.includes(recherche) ||
                rowEmplacement.includes(recherche) ||
                rowQuartier.includes(recherche) ||
                rowVisibilite.includes(recherche);

            // Afficher ou cacher la ligne
            if (typeMatch && etatMatch && eclairageMatch && statutActifMatch && rechercheMatch) {
                row.style.display = '';
                visibleCount++;
            } else {
                row.style.display = 'none';
            }
        });

        // Afficher un message si aucun résultat
        const tbody = document.querySelector('tbody');
        let noResultsMsg = document.getElementById('no-results-message');
        if (visibleCount === 0 && tableRows.length > 0) {
            if (!noResultsMsg) {
                noResultsMsg = document.createElement('tr');
                noResultsMsg.id = 'no-results-message';
                noResultsMsg.innerHTML = '<td colspan="7" class="text-center py-4"><em>Aucun résultat trouvé</em></td>';
                tbody.appendChild(noResultsMsg);
            }
            noResultsMsg.style.display = '';
        } else if (noResultsMsg) {
            noResultsMsg.style.display = 'none';
        }
    }

    // Écouter les changements dans les selects (filtrage immédiat)
    if (typeSelect) {
        typeSelect.addEventListener('change', filterRows);
    }
    if (etatSelect) {
        etatSelect.addEventListener('change', filterRows);
    }
    if (eclairageSelect) {
        eclairageSelect.addEventListener('change', filterRows);
    }
    if (statutActifSelect) {
        statutActifSelect.addEventListener('change', filterRows);
    }

    // Écouter les changements dans le champ de recherche avec debounce (300ms)
    if (rechercheInput) {
        rechercheInput.addEventListener('input', function() {
            clearTimeout(searchTimeout);
            searchTimeout = setTimeout(filterRows, 300);
        });
    }
});
</script>
{% endblock %}
