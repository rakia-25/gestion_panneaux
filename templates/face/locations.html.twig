{% extends 'base.html.twig' %}

{% block title %}Locations de {{ face.nomComplet }}{% endblock %}

{% block body %}
<div class="page-header">
    <div style="display: flex; justify-content: space-between; align-items: center;">
        <div>
            <h1 class="page-title">Locations de {{ face.nomComplet }}</h1>
            <p class="page-description">Historique des locations pour cette face</p>
        </div>
        <div style="display: flex; gap: 0.75rem;">
            <a href="{{ path('app_location_new', {face_id: face.id}) }}" class="btn-primary-modern">
                <i class="bi bi-plus"></i> Nouvelle location
            </a>
            <a href="{{ path('app_panneau_show', {id: face.panneau.id}) }}" class="btn-secondary-modern">
                <i class="bi bi-arrow-left"></i> Retour au panneau
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="section-card" style="margin-bottom: 1.5rem;">
            <div class="section-header">
                <h3 class="section-title">Informations de la face</h3>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Face :</strong> <span class="table-badge info" style="font-size: 0.875rem;">{{ face.lettre }}</span></p>
                    <p><strong>Nom complet :</strong> {{ face.nomComplet }}</p>
                    <p><strong>Panneau :</strong> {{ face.panneau.reference }}</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Emplacement :</strong> {{ face.panneau.emplacement }}</p>
                    <p><strong>Prix mensuel :</strong> {{ face.panneau.prixMensuel|number_format(0, ',', ' ') }} FCFA</p>
                    <p><strong>Statut actuel :</strong> 
                        {% set locationActive = face.getLocationActive() %}
                        {% if locationActive %}
                            <span class="table-badge warning">Occupée</span>
                        {% elseif face.getLocationsActivesOuFutures()|length > 0 %}
                            <span class="table-badge info">Réservée</span>
                        {% else %}
                            <span class="table-badge success">Disponible</span>
                        {% endif %}
                    </p>
                </div>
            </div>
        </div>

        <div class="table-card">
            <div class="table-header">
                <h3 class="table-title">Historique des locations ({{ locations|length }})</h3>
            </div>
            {% if locations|length > 0 %}
                <table class="modern-table">
                    <thead>
                        <tr>
                            <th>Client</th>
                            <th>Date début</th>
                            <th>Date fin</th>
                            <th>Durée</th>
                            <th>Montant mensuel</th>
                            <th>Montant total</th>
                            <th>Statut</th>
                            <th>Paiement</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for location in locations %}
                            {% set statutPaiement = location.statutPaiement %}
                            <tr>
                                <td>
                                    <strong>{{ location.client.nom }}</strong>
                                    <br>
                                    <small style="color: var(--text-gray); font-size: 0.75rem;">{{ location.client.type }}</small>
                                </td>
                                <td>{{ location.dateDebut|date('d/m/Y') }}</td>
                                <td>{{ location.dateFin|date('d/m/Y') }}</td>
                                <td>{{ location.nombreMois }} mois</td>
                                <td>{{ location.montantMensuel|number_format(0, ',', ' ') }} FCFA</td>
                                <td><strong>{{ location.montantTotal|number_format(0, ',', ' ') }} FCFA</strong></td>
                                <td>
                                    {% if location.isActive() %}
                                        <span class="table-badge success">En cours</span>
                                    {% elseif location.isTerminee() %}
                                        <span class="table-badge warning">Terminée</span>
                                    {% else %}
                                        <span class="table-badge info">À venir</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if statutPaiement == 'paye' %}
                                        <span class="table-badge success">Payé</span>
                                    {% elseif statutPaiement == 'partiellement_paye' %}
                                        <span class="table-badge warning">Partiellement payé</span>
                                    {% else %}
                                        <span class="table-badge pending">Impayé</span>
                                    {% endif %}
                                    <br>
                                    <small style="color: var(--text-gray); font-size: 0.75rem;">
                                        {{ location.montantTotalPaye|number_format(0, ',', ' ') }} / {{ location.montantTotal|number_format(0, ',', ' ') }} FCFA
                                    </small>
                                </td>
                                <td>
                                    <div class="action-menu">
                                        <a href="{{ path('app_location_show', {id: location.id}) }}" class="action-btn" title="Voir">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="{{ path('app_location_edit', {id: location.id}) }}" class="action-btn" title="Modifier">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <div style="text-align: center; padding: 2rem; color: var(--text-gray);">
                    <i class="bi bi-info-circle"></i> Aucune location enregistrée pour cette face.
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
