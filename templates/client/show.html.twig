{% extends 'base.html.twig' %}

{% block title %}Client {{ client.nom }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-people"></i> Client : {{ client.nom }}</h1>
        <div>
            <a href="{{ path('app_location_new', {client_id: client.id}) }}" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Nouvelle location
            </a>
            <a href="{{ path('app_client_edit', {id: client.id}) }}" class="btn btn-secondary">
                <i class="bi bi-pencil"></i> Modifier
            </a>
            <a href="{{ path('app_client_index') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Retour
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Informations générales</h5>
                </div>
                <div class="card-body">
                    <table class="table">
                        <tr>
                            <th width="200">Nom / Raison sociale</th>
                            <td><strong>{{ client.nom }}</strong></td>
                        </tr>
                        <tr>
                            <th>Type</th>
                            <td>
                                {% if client.type == 'entreprise' %}
                                    <span class="badge bg-info">Entreprise</span>
                                {% else %}
                                    <span class="badge bg-secondary">Personne</span>
                                {% endif %}
                            </td>
                        </tr>
                        {% if client.email %}
                        <tr>
                            <th>Email</th>
                            <td><a href="mailto:{{ client.email }}">{{ client.email }}</a></td>
                        </tr>
                        {% endif %}
                        {% if client.telephone %}
                        <tr>
                            <th>Téléphone</th>
                            <td><a href="tel:{{ client.telephone }}">{{ client.telephone }}</a></td>
                        </tr>
                        {% endif %}
                        {% if client.adresse %}
                        <tr>
                            <th>Adresse</th>
                            <td>{{ client.adresse }}</td>
                        </tr>
                        {% endif %}
                        {% if client.ville %}
                        <tr>
                            <th>Ville</th>
                            <td>{{ client.ville }}</td>
                        </tr>
                        {% endif %}
                        {% if client.pays %}
                        <tr>
                            <th>Pays</th>
                            <td>{{ client.pays }}</td>
                        </tr>
                        {% endif %}
                        {% if client.notes %}
                        <tr>
                            <th>Notes</th>
                            <td>{{ client.notes }}</td>
                        </tr>
                        {% endif %}
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Historique des locations</h5>
                    <span class="badge bg-primary">{{ client.locations|length }} location(s)</span>
                </div>
                <div class="card-body">
                    {% if client.locations|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Face</th>
                                        <th>Période</th>
                                        <th>Montant</th>
                                        <th>Statut</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for location in client.locations %}
                                        <tr>
                                            <td>{{ location.face.nomComplet }}</td>
                                            <td>
                                                <small>{{ location.dateDebut|date('d/m/Y') }} - {{ location.dateFin|date('d/m/Y') }}</small>
                                            </td>
                                            <td>{{ location.montantMensuel|number_format(0, ',', ' ') }} FCFA</td>
                                            <td>
                                                {% if location.estPaye %}
                                                    <span class="badge bg-success">Payé</span>
                                                {% else %}
                                                    <span class="badge bg-danger">Impayé</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <a href="{{ path('app_location_show', {id: location.id}) }}" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center py-4">
                            <p class="text-muted mb-3">Aucune location pour ce client.</p>
                            <a href="{{ path('app_location_new', {client_id: client.id}) }}" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Créer une location
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
