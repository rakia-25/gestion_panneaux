<script>
document.addEventListener('DOMContentLoaded', function() {
    // Gestion du toggle des filtres
    const filtersToggle = document.getElementById('filtersToggle');
    const filtersBody = document.getElementById('filtersBody');

    if (filtersToggle && filtersBody) {
        filtersToggle.addEventListener('click', function() {
            filtersBody.classList.toggle('collapsed');
            filtersToggle.classList.toggle('collapsed');
        });
    }

    // Éléments du formulaire
    const rechercheInput = document.getElementById('recherche');
    const typeSelect = document.getElementById('type');
    const villeInput = document.getElementById('ville');
    const resetBtn = document.getElementById('resetFilters');
    const clearSearchBtn = document.getElementById('clearSearch');
    const resultsCount = document.getElementById('resultsCount');
    const activeFiltersCount = document.getElementById('activeFiltersCount');

    // Toutes les lignes/cartes
    const tableRows = document.querySelectorAll('#clientsTable tbody tr');
    const cards = document.querySelectorAll('.client-card');

    let searchTimeout;

    // Fonction pour compter les filtres actifs
    function updateActiveFiltersCount() {
        let count = 0;
        if (rechercheInput && rechercheInput.value) count++;
        if (typeSelect && typeSelect.value) count++;
        if (villeInput && villeInput.value) count++;

        if (count > 0) {
            activeFiltersCount.textContent = count;
            activeFiltersCount.style.display = 'inline-block';
        } else {
            activeFiltersCount.style.display = 'none';
        }
    }

    // Fonction de filtrage
    function filterElements() {
        const recherche = (rechercheInput?.value || '').toLowerCase();
        const type = typeSelect?.value || '';
        const ville = (villeInput?.value || '').toLowerCase();

        let visibleCount = 0;

        // Filtrer les lignes du tableau
        tableRows.forEach(row => {
            if (matchesFilters(row, { recherche, type, ville })) {
                row.style.display = '';
                visibleCount++;
            } else {
                row.style.display = 'none';
            }
        });

        // Filtrer les cartes
        cards.forEach(card => {
            if (matchesFilters(card, { recherche, type, ville })) {
                card.style.display = '';
            } else {
                card.style.display = 'none';
            }
        });

        // Mettre à jour le compteur
        if (resultsCount) {
            resultsCount.textContent = visibleCount || cards.length;
        }

        // Afficher/masquer le bouton clear
        if (clearSearchBtn) {
            clearSearchBtn.style.display = recherche ? 'flex' : 'none';
        }

        // Mettre à jour le compteur de filtres actifs
        updateActiveFiltersCount();
    }

    // Vérifier si un élément correspond aux filtres
    function matchesFilters(element, filters) {
        const { recherche, type, ville } = filters;

        const rowType = element.dataset.type || '';
        const rowVille = element.dataset.ville || '';
        const rowNom = element.dataset.nom || '';
        const rowEmail = element.dataset.email || '';
        const rowTelephone = element.dataset.telephone || '';
        const rowAdresse = element.dataset.adresse || '';

        const typeMatch = !type || rowType === type;
        const villeMatch = !ville || rowVille.includes(ville);
        const rechercheMatch = !recherche ||
            rowNom.includes(recherche) ||
            rowEmail.includes(recherche) ||
            rowTelephone.includes(recherche) ||
            rowAdresse.includes(recherche);

        return typeMatch && villeMatch && rechercheMatch;
    }

    // Écouter les changements
    if (typeSelect) typeSelect.addEventListener('change', filterElements);

    if (rechercheInput) {
        rechercheInput.addEventListener('input', function() {
            clearTimeout(searchTimeout);
            searchTimeout = setTimeout(filterElements, 300);
        });
    }

    if (villeInput) {
        villeInput.addEventListener('input', function() {
            clearTimeout(searchTimeout);
            searchTimeout = setTimeout(filterElements, 300);
        });
    }

    // Bouton clear search
    if (clearSearchBtn) {
        clearSearchBtn.addEventListener('click', function() {
            if (rechercheInput) {
                rechercheInput.value = '';
                filterElements();
            }
        });
    }

    // Bouton reset
    if (resetBtn) {
        resetBtn.addEventListener('click', function() {
            if (rechercheInput) rechercheInput.value = '';
            if (typeSelect) typeSelect.value = '';
            if (villeInput) villeInput.value = '';
            filterElements();
        });
    }

    // Tri du tableau
    const sortButtons = document.querySelectorAll('.sortable');
    let currentSort = { column: null, direction: 'asc' };

    sortButtons.forEach(button => {
        button.addEventListener('click', function() {
            const column = this.dataset.sort;

            if (currentSort.column === column) {
                currentSort.direction = currentSort.direction === 'asc' ? 'desc' : 'asc';
            } else {
                currentSort.column = column;
                currentSort.direction = 'asc';
            }

            sortTable(column, currentSort.direction);
            updateSortIndicators(this, currentSort.direction);
        });
    });

    function sortTable(column, direction) {
        const tbody = document.querySelector('#clientsTable tbody');
        const rows = Array.from(tbody.querySelectorAll('tr'));

        rows.sort((a, b) => {
            let aVal, bVal;

            switch(column) {
                case 'nom':
                    aVal = a.dataset.nom;
                    bVal = b.dataset.nom;
                    break;
                case 'email':
                    aVal = a.dataset.email;
                    bVal = b.dataset.email;
                    break;
                case 'ville':
                    aVal = a.dataset.ville;
                    bVal = b.dataset.ville;
                    break;
                case 'locations':
                    aVal = parseInt(a.dataset.locations) || 0;
                    bVal = parseInt(b.dataset.locations) || 0;
                    break;
                default:
                    return 0;
            }

            if (typeof aVal === 'string') {
                return direction === 'asc' ?
                    aVal.localeCompare(bVal) :
                    bVal.localeCompare(aVal);
            } else {
                return direction === 'asc' ? aVal - bVal : bVal - aVal;
            }
        });

        rows.forEach(row => tbody.appendChild(row));
    }

    function updateSortIndicators(activeButton, direction) {
        sortButtons.forEach(btn => {
            const icon = btn.querySelector('i');
            if (icon) {
                icon.className = 'bi bi-chevron-expand';
            }
        });

        const icon = activeButton.querySelector('i');
        if (icon) {
            icon.className = direction === 'asc' ? 'bi bi-chevron-up' : 'bi bi-chevron-down';
        }
    }

    // Initialiser
    updateActiveFiltersCount();
    filterElements();
});
</script>
