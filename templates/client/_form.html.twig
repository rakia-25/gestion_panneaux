{#
    Partial formulaire client (création et édition).
    Variables : form, cancel_path, submit_label, cancel_label (optionnel), form_aria_label (optionnel)
#}
{{ form_start(form, {
    attr: {
        class: 'form-modern form-client',
        'aria-label': form_aria_label|default('Formulaire client')
    }
}) }}
    <div class="form-section form-section-step">
        <div class="form-section-header-modern">
            <div class="section-icon-modern">
                <i class="bi bi-person-badge"></i>
            </div>
            <div class="min-w-0">
                <h2 class="section-title-modern">Identité du client</h2>
                <p class="section-subtitle-modern">Informations principales</p>
            </div>
        </div>
        <div class="row g-3">
            <div class="col-12"><div class="min-w-0">{{ form_row(form.nom) }}</div></div>
            <div class="col-12 col-md-6"><div class="min-w-0">{{ form_row(form.type) }}</div></div>
        </div>
    </div>

    <div class="form-section form-section-step">
        <div class="form-section-header-modern">
            <div class="section-icon-modern">
                <i class="bi bi-envelope-at"></i>
            </div>
            <div class="min-w-0">
                <h2 class="section-title-modern">Coordonnées</h2>
                <p class="section-subtitle-modern">Moyens de contact</p>
            </div>
        </div>
        <div class="row g-3">
            <div class="col-md-6"><div class="min-w-0">{{ form_row(form.email) }}</div></div>
            <div class="col-md-6"><div class="min-w-0">{{ form_row(form.telephone) }}</div></div>
        </div>
    </div>

    <div class="form-section form-section-step">
        <div class="form-section-header-modern">
            <div class="section-icon-modern">
                <i class="bi bi-geo-alt"></i>
            </div>
            <div class="min-w-0">
                <h2 class="section-title-modern">Localisation</h2>
                <p class="section-subtitle-modern">Adresse complète</p>
            </div>
        </div>
        <div class="row g-3">
            <div class="col-12"><div class="min-w-0">{{ form_row(form.adresse) }}</div></div>
            <div class="col-md-6"><div class="min-w-0">{{ form_row(form.ville) }}</div></div>
            <div class="col-md-6"><div class="min-w-0">{{ form_row(form.pays) }}</div></div>
        </div>
    </div>

    <div class="form-section form-section-step">
        <div class="form-section-header-modern">
            <div class="section-icon-modern">
                <i class="bi bi-card-text"></i>
            </div>
            <div class="min-w-0">
                <h2 class="section-title-modern">Informations complémentaires</h2>
                <p class="section-subtitle-modern">Notes et remarques</p>
            </div>
        </div>
        <div class="row g-3">
            <div class="col-12"><div class="min-w-0">{{ form_row(form.notes) }}</div></div>
        </div>
    </div>

    <div class="form-actions-modern">
        <a href="{{ cancel_path }}" class="btn-secondary-modern">
            <i class="bi bi-x-lg"></i> {{ cancel_label|default('Annuler') }}
        </a>
        <button type="submit" class="btn-primary-modern btn-submit-large">
            <i class="bi bi-check-lg"></i> {{ submit_label }}
        </button>
    </div>
{{ form_end(form) }}
