{% extends 'base.html.twig' %}

{% block title %}Nouveau client{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h3><i class="bi bi-plus-circle"></i> Nouveau client</h3>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        {{ form_row(form.nom) }}
                        {{ form_row(form.type) }}
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.email) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.telephone) }}
                            </div>
                        </div>
                        {{ form_row(form.adresse) }}
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.ville) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.pays) }}
                            </div>
                        </div>
                        {{ form_row(form.notes) }}
                        
                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('app_client_index') }}" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Retour
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check"></i> Cr√©er
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
