<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Gestion Panneaux Publicitaires - Niamey{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><rect x=%2210%22 y=%2210%22 width=%2280%22 height=%2260%22 fill=%22%236366f1%22 rx=%225%22/><rect x=%2215%22 y=%2215%22 width=%2270%22 height=%2250%22 fill=%22white%22 rx=%223%22/><text x=%2250%22 y=%2245%22 font-size=%2224%22 font-weight=%22bold%22 fill=%22%236366f1%22 text-anchor=%22middle%22>P%3C/text%3E</svg>">

        {# Bootstrap 5 CSS #}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css">

        {# Thème global + styles formulaires (client, location, paiement, panneau) #}
        <link rel="stylesheet" href="{{ asset('css/theme.css') }}">
        <link rel="stylesheet" href="{{ asset('css/forms.css') }}">

        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        {% if app.user %}
            <div class="dashboard-layout">
                {# Sidebar #}
                <aside class="sidebar" id="sidebar">
                    <div class="sidebar-header">
                        <div class="sidebar-logo">GP</div>
                        <div class="sidebar-brand">Gestion Panneaux</div>
                    </div>
                    <nav class="sidebar-nav">
                        <div class="nav-section">
                            <a href="{{ path('app_dashboard') }}" class="nav-item {% if app.request.attributes.get('_route') == 'app_dashboard' %}active{% endif %}">
                                <i class="bi bi-speedometer2"></i>
                                <span>Dashboard</span>
                            </a>
                            <a href="{{ path('app_panneau_index') }}" class="nav-item {% if 'panneau' in app.request.attributes.get('_route') %}active{% endif %}">
                                <i class="bi bi-grid"></i>
                                <span>Panneaux</span>
                            </a>
                            <a href="{{ path('app_client_index') }}" class="nav-item {% if 'client' in app.request.attributes.get('_route') %}active{% endif %}">
                                <i class="bi bi-people"></i>
                                <span>Clients</span>
                            </a>
                            <a href="{{ path('app_location_index') }}" class="nav-item {% if 'location' in app.request.attributes.get('_route') %}active{% endif %}">
                                <i class="bi bi-calendar-check"></i>
                                <span>Locations</span>
                                {% if app.request.attributes.get('_route') == 'app_location_index' %}
                                    <span class="nav-badge active">Active</span>
                                {% endif %}
                            </a>
                        </div>
                        <div class="nav-section">
                            <div class="nav-section-title">Admin</div>
                            <a href="{{ path('app_notification_index') }}" class="nav-item {% if 'notification' in app.request.attributes.get('_route') %}active{% endif %}">
                                <i class="bi bi-bell"></i>
                                <span>Notifications</span>
                                {% if notification_count() > 0 %}
                                    <span class="nav-badge new">{{ notification_count() > 9 ? '9+' : notification_count() }}</span>
                                {% endif %}
                            </a>
                            <a href="{{ path('app_export_index') }}" class="nav-item {% if 'export' in app.request.attributes.get('_route') %}active{% endif %}">
                                <i class="bi bi-download"></i>
                                <span>Exporter</span>
                            </a>
                            <a href="{{ path('app_logout') }}" class="nav-item">
                                <i class="bi bi-box-arrow-right"></i>
                                <span>Déconnexion</span>
                            </a>
                        </div>
                    </nav>
                </aside>

                {# Main Content #}
                <div class="main-content">
                    {# Top Header #}
                    <header class="top-header">
                        <div class="header-left">
                            <button class="menu-toggle" id="menuToggle">
                                <i class="bi bi-list"></i>
                            </button>
                            <div class="search-bar">
                                <i class="bi bi-search"></i>
                                <input type="text" placeholder="Search... (Ctrl+K)" />
                            </div>
                        </div>
                        <div class="header-right">
                            <div class="header-icon">
                                <i class="bi bi-sun"></i>
                            </div>
                            <div class="header-icon">
                                <i class="bi bi-grid"></i>
                            </div>
                            <div class="header-icon dropdown" style="position: relative;">
                                <a href="#" class="d-flex align-items-center text-dark text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" id="notificationDropdown">
                                    <i class="bi bi-bell"></i>
                                    {% set notif_count = notification_count() %}
                                    {% if notif_count > 0 %}
                                        <span class="notification-count">{{ notif_count > 9 ? '9+' : notif_count }}</span>
                                    {% endif %}
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow border-0 p-0" style="min-width: 360px;" aria-labelledby="notificationDropdown">
                                    <li class="p-0">
                                        {{ render(controller('App\\Controller\\NotificationController::dropdown')) }}
                                    </li>
                                </ul>
                            </div>
                            <div class="user-menu dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                <div class="user-avatar">{{ app.user.fullName|first|upper }}</div>
                                <div class="user-info">
                                    <span class="user-name">{{ app.user.fullName }}</span>
                                </div>
                                <i class="bi bi-chevron-down" style="font-size: 0.75rem;"></i>
                            </div>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="{{ path('app_logout') }}">
                                    <i class="bi bi-box-arrow-right"></i> Déconnexion
                                </a></li>
                            </ul>
                        </div>
                    </header>

                    {# Content Area #}
                    <div class="content-area">
                        {% block breadcrumbs %}{% endblock %}
                        {# Alert Messages #}
                        <div class="alert-container">
                            {% for message in app.flashes('success') %}
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    {{ message }}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            {% endfor %}

                            {% for message in app.flashes('error') %}
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    {{ message }}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            {% endfor %}
                        </div>

                        {% block body %}{% endblock %}
                    </div>
                </div>
            </div>

            {# Footer #}
            <footer class="app-footer">
                <p>&copy; {{ "now"|date("Y") }} Gestion Panneaux Publicitaires - Niamey. Tous droits réservés.</p>
            </footer>
        {% else %}
            {# Pour les utilisateurs non connectés (ex: page de login) #}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert" style="position: fixed; top: 1rem; right: 1rem; z-index: 1000; max-width: 400px;">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert" style="position: fixed; top: 1rem; right: 1rem; z-index: 1000; max-width: 400px;">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            {% block body_guest %}{% endblock %}

            {# Footer pour utilisateurs non connectés #}
            <footer class="app-footer-guest">
                <p>&copy; {{ "now"|date("Y") }} Gestion Panneaux Publicitaires - Niamey. Tous droits réservés.</p>
            </footer>
        {% endif %}

        {# Bootstrap 5 JS #}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
        {# Scripts globaux : sidebar, validation champs #}
        <script src="{{ asset('js/base.js') }}"></script>

        {% block javascripts %}{% endblock %}
    </body>
</html>
