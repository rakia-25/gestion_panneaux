        {# Script pour empêcher la saisie de texte dans les champs numériques et valider les téléphones #}
        <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Sélectionner tous les champs de type number
            const numberInputs = document.querySelectorAll('input[type="number"]');

            numberInputs.forEach(function(input) {
                const pattern = input.getAttribute('pattern');
                const step = input.getAttribute('step');
                const allowDecimal = step && parseFloat(step) < 1;

                // Empêcher la saisie de caractères non numériques
                input.addEventListener('keypress', function(e) {
                    // Autoriser : backspace, delete, tab, escape, enter
                    if ([8, 9, 27, 13, 46].indexOf(e.keyCode) !== -1 ||
                        // Autoriser : Ctrl+A, Ctrl+C, Ctrl+V, Ctrl+X
                        (e.keyCode === 65 && e.ctrlKey === true) ||
                        (e.keyCode === 67 && e.ctrlKey === true) ||
                        (e.keyCode === 86 && e.ctrlKey === true) ||
                        (e.keyCode === 88 && e.ctrlKey === true) ||
                        // Autoriser : home, end, left, right
                        (e.keyCode >= 35 && e.keyCode <= 39)) {
                        return;
                    }

                    // Autoriser le point/virgule pour les nombres décimaux
                    if (allowDecimal && (e.keyCode === 190 || e.keyCode === 110 || e.keyCode === 188)) {
                        // Vérifier qu'il n'y a pas déjà un point/virgule
                        if (this.value.indexOf('.') !== -1 || this.value.indexOf(',') !== -1) {
                            e.preventDefault();
                        }
                        return;
                    }

                    // S'assurer que c'est un nombre
                    if ((e.shiftKey || (e.keyCode < 48 || e.keyCode > 57)) && (e.keyCode < 96 || e.keyCode > 105)) {
                        e.preventDefault();
                    }
                });

                // Empêcher le collage de texte non numérique
                input.addEventListener('paste', function(e) {
                    const paste = (e.clipboardData || window.clipboardData).getData('text');
                    if (allowDecimal) {
                        // Autoriser les nombres avec décimales
                        if (!/^\d+(\.\d+)?$/.test(paste.replace(',', '.'))) {
                            e.preventDefault();
                        }
                    } else {
                        // Autoriser uniquement les entiers
                        if (!/^\d+$/.test(paste)) {
                            e.preventDefault();
                        }
                    }
                });

                // Nettoyer la valeur si elle contient des caractères non numériques
                input.addEventListener('input', function(e) {
                    if (allowDecimal) {
                        // Autoriser les nombres avec décimales
                        this.value = this.value.replace(/[^0-9.,]/g, '').replace(',', '.');
                        // S'assurer qu'il n'y a qu'un seul point
                        const parts = this.value.split('.');
                        if (parts.length > 2) {
                            this.value = parts[0] + '.' + parts.slice(1).join('');
                        }
                    } else {
                        // Autoriser uniquement les entiers
                        this.value = this.value.replace(/[^0-9]/g, '');
                    }
                });
            });

            // Validation pour les champs téléphone (inputmode="tel")
            const telInputs = document.querySelectorAll('input[inputmode="tel"]');
            telInputs.forEach(function(input) {
                // Nettoyer la valeur pour ne garder que les caractères valides pour un téléphone
                input.addEventListener('input', function(e) {
                    // Autoriser : chiffres, +, espaces, tirets, parenthèses
                    this.value = this.value.replace(/[^0-9+\s\-\(\)]/g, '');
                });
            });

            // Validation pour les champs coordonnées GPS
            const gpsInputs = document.querySelectorAll('input[data-format="gps"]');
            gpsInputs.forEach(function(input) {
                // Format attendu: latitude,longitude (ex: 13.5123,2.1098)
                // Latitude: -90 à 90, Longitude: -180 à 180
                const gpsPattern = /^-?([0-8]?[0-9](\.[0-9]{1,6})?|90(\.0{1,6})?),-?([0-1]?[0-7]?[0-9](\.[0-9]{1,6})?|180(\.0{1,6})?)$/;

                // Valider lors de la saisie
                input.addEventListener('input', function(e) {
                    const value = this.value.trim();

                    // Autoriser la saisie en cours (même si incomplète)
                    // Mais afficher un message d'aide
                    const formGroup = this.closest('.mb-3');
                    if (formGroup) {
                        let helpMsg = formGroup.querySelector('.gps-validation-msg');
                        if (!helpMsg) {
                            helpMsg = document.createElement('div');
                            helpMsg.className = 'gps-validation-msg form-text';
                            formGroup.appendChild(helpMsg);
                        }

                        if (value === '') {
                            helpMsg.textContent = '';
                            helpMsg.className = 'gps-validation-msg form-text';
                        } else if (gpsPattern.test(value)) {
                            helpMsg.textContent = '✓ Format valide';
                            helpMsg.className = 'gps-validation-msg form-text text-success';
                            this.classList.remove('is-invalid');
                            this.classList.add('is-valid');
                        } else {
                            helpMsg.textContent = 'Format attendu: latitude,longitude (ex: 13.5123,2.1098)';
                            helpMsg.className = 'gps-validation-msg form-text text-danger';
                            this.classList.remove('is-valid');
                            this.classList.add('is-invalid');
                        }
                    }
                });

                // Valider lors de la perte de focus
                input.addEventListener('blur', function(e) {
                    const value = this.value.trim();
                    if (value && !gpsPattern.test(value)) {
                        this.classList.add('is-invalid');
                        // Optionnel: réinitialiser si format invalide
                        // this.value = '';
                    }
                });

                // Empêcher la saisie de caractères invalides
                input.addEventListener('keypress', function(e) {
                    // Autoriser : chiffres, point, virgule, signe moins
                    const allowedChars = /[0-9.,\-]/;
                    const key = String.fromCharCode(e.keyCode || e.which);

                    // Autoriser les touches de contrôle
                    if ([8, 9, 27, 13, 46, 35, 36, 37, 38, 39, 40].indexOf(e.keyCode) !== -1 ||
                        (e.keyCode === 65 && e.ctrlKey === true) ||
                        (e.keyCode === 67 && e.ctrlKey === true) ||
                        (e.keyCode === 86 && e.ctrlKey === true) ||
                        (e.keyCode === 88 && e.ctrlKey === true)) {
                        return;
                    }

                    if (!allowedChars.test(key)) {
                        e.preventDefault();
                    }
                });
            });
        });
        </script>

